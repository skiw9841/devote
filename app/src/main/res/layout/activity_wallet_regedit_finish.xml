<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:id="@+id/qrdecoderview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="15dp">


        <com.ad4th.devote.widget.CustomToolbar
            android:id="@+id/customToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bgColor="@color/transparent"
            app:title="@string/wallet_regedit"
            app:titleColor="@color/block"
            app:type="@integer/custom_toolbar_title_right" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:weightSum="3">

            <TextView
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/wallet_step_2"
                android:textColor="@color/grey" />

            <TextView
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/wallet_step_3"
                android:textColor="@color/grey" />

            <TextView
                android:layout_width="105dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/wallet_step_4"
                android:textColor="@color/bora" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="40dp"
                android:layout_height="1dp" />

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_bora" />
            </RelativeLayout>


            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey1" />

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_bora" />
            </RelativeLayout>

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey1" />

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_edge_bora">

                <View
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_grey" />
            </RelativeLayout>

            <View
                android:layout_width="40dp"
                android:layout_height="1dp" />


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutHeader"
        android:layout_centerInParent="true"
        android:background="@drawable/border_white">


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/wallet_address_reg_finish_info"
            android:textSize="16sp" />


        <ImageView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="12dp"
            android:src="@drawable/ic_qr" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/wallet_address_reg_finish_info2"
            android:textColor="@color/block"
            android:textSize="16sp" />


    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layoutInfo"
        android:layout_below="@+id/layoutHeader"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_camera_qr" />


</RelativeLayout>
