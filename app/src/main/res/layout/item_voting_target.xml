<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageViewTeam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewChoice"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        android:paddingTop="7dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1팀"
            android:textColor="@color/block_2b"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남정네"
            android:textColor="@color/grey2"
            android:textSize="14sp"
            android:gravity="center"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="9sp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeStepGranularity="1sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageViewChoice"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageViewTeam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-13dp"
        android:background="@drawable/circle_white"
        android:src="@drawable/ic_check_on2" />


</RelativeLayout>
